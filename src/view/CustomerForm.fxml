<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="400.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerForm">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d3eaff" height="400.0" opacity="0.5" stroke="BLACK" strokeType="INSIDE" strokeWidth="3.0" width="320.0" />
      <VBox prefHeight="400.0" prefWidth="119.0" spacing="28.0">
         <children>
            <Label fx:id="nameLabel" text="Customer name">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="addressLabel" text="Address">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="postalCodeLabel" text="Postal code">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="phoneLabel" text="Phone number">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="countryLabel" text="Country">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="stateLabel" text="State">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox layoutX="119.0" prefHeight="400.0" prefWidth="186.0" spacing="30.0">
         <children>
            <TextField fx:id="nameField" />
            <TextField fx:id="addressField" layoutX="20.0" layoutY="20.0" />
            <TextField fx:id="postalCodeField" layoutX="20.0" layoutY="20.0" />
            <TextField fx:id="phoneField" layoutX="20.0" layoutY="20.0" />
            <ComboBox fx:id="countryComboBox" prefWidth="150.0" />
            <ComboBox fx:id="stateComboBox" layoutX="20.0" layoutY="280.0" prefWidth="150.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" top="15.0" />
         </padding>
      </VBox>
      <Button fx:id="saveButton" layoutX="20.0" layoutY="355.0" mnemonicParsing="false" onAction="#onSaveButton" text="Save" />
      <Button fx:id="cancelButton" layoutX="100.0" layoutY="355.0" mnemonicParsing="false" onAction="#onCancelButton" text="Cancel" />
   </children>
</AnchorPane>
